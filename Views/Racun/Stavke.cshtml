@model IEnumerable<StavkaRacuna>



<table class="table table-sm table-striped table-hover table-bordered" id="tablegodine">
    <thead>
        <tr>
            @{
                string[] nazivi = { "ID pića", "Kolicina", "JedCijena", "Iznos" };
                for (int i = 0; i < nazivi.Length; i++)
                {
                    <th>
                        @nazivi[i]

                    </th>
                }
            }
            <th></th>


        </tr>


    </thead>

    <tbody>
        @foreach (var stavka in Model)
        {

        <tr>

            <td class="text-left col-sm-auto">
                <input type="hidden" name="Stavke.Index" value="@stavka.IdPice" />
                <input type="hidden" name="Stavke[@stavka.IdRacun, @stavka.IdPice].IdRacun" value="@stavka.IdRacun" />
                <input type="hidden" name="Stavke[@stavka.IdRacun, @stavka.IdPice].IdPice" value="@stavka.IdPice" />
                <input type="hidden" name="Stavke[@stavka.IdRacun, @stavka.IdPice].Kolicina" value="@stavka.Kolicina" />
                <input type="hidden" name="Stavke[@stavka.IdRacun, @stavka.IdPice].JedCijena" value="@stavka.JedCijena" />
                <input type="hidden" name="Stavke[@stavka.IdRacun, @stavka.IdPice].Iznos" value="@stavka.Iznos" />
                @stavka.IdPice
            </td>

            <td class="text-left col-sm-auto">
                <input name="Stavke[@stavka.IdRacun, @stavka.IdPice].Kolicina" class="form-control" value="@stavka.Kolicina" />

            </td>
            <td class="text-left col-sm-auto">
                <input name="Stavke[@stavka.IdRacun, @stavka.IdPice].JedCijena" class="form-control" value="@stavka.JedCijena" />

            </td>
            <td class="text-left col-sm-auto">
                <input name="Stavke[@stavka.IdRacun, @stavka.IdPice].Iznos" class="form-control" value="@stavka.Iznos" />

            </td>
            <td>
                <button class="btn btn-sm btn-danger deleterow" title="Izbaci"><i class="fa fa-minus"></i></button>
            </td>


        </tr>
        }
        <tr>
            <td class="text-left" colspan="3">
                <button id="stavka-dodaj" class="btn btn-sm btn-secondary" title="Dodaj"><i class="fas fa-plus"></i></button>
            </td>
        </tr>

    </tbody>

</table>