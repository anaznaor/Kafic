@model Kafic.Models.Racun

@{
    ViewData["Title"] = "Novi racun";
}

<div class="jumbotron">

    <h2>Dodaj novi racun</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdKorisnik">Korisnik:</label>
                    <div><span asp-validation-for="IdKorisnik" class="text-danger"></span></div>
                    <select class="form-control" asp-for="IdKorisnik" asp-items="ViewBag.Korisnici">
                     <option selected value="" disabled>Odaberite korisnika</option>

                    </select>
                 </div>

                <div class="form-group">
                    <label asp-for="Datum">Datum racuna:</label>
                    <div><span asp-validation-for="Datum" class="text-danger"></span></div>
                    <input asp-for="Datum" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="UkupanIznos">Ukupan iznos:</label>
                    <div><span asp-validation-for="UkupanIznos" class="text-danger"></span></div>
                    <input asp-for="UkupanIznos" class="form-control" />
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Dodaj</button>
                    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>
