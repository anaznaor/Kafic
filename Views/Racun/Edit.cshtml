@model RacunViewModel
@{
  ViewBag.Title = "Izmjena racuna";
}

<partial name="PreviousNext" />
<hr />


<div class="container">
    <form id="plan_form" method="post" asp-action="Edit"
          asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending"
          asp-route-position="@ViewBag.Position">
        <input type="hidden" asp-for="IdRacun" />
        <div asp-validation-summary="All" class="form-group row"></div>

            <div class="form-group">
                   <label asp-for="idKorisnik">Korisnik</label>
                   <div><span asp-validation-for="idKorisnik" class="text-danger"></span></div>
                   <select asp-for="idKorisnik" class="form-control" asp-items="ViewBag.Korisnici"></select>
            </div>

        <div class="form-group row">
            
            <label asp-for="Datum" class="col-sm-auto col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="@Model.Datum" class="form-control" />
            </div>

            <label asp-for="UkupanIznos" class="col-sm-auto col-form-label"></label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="@Model.UkupanIznos" />
                </div>

            <div class="col-sm-auto">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Edit"
                   asp-route-id="@Model.IdRacun"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   asp-route-position="@ViewBag.Position"
                   title="Osvježi">
                    <i class="fas fa-sync-alt"></i>
                </a>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Index"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   title="Odustani">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>

      



        <div class="col-sm-12">
            <partial name="Stavke" model="Model.Stavke" />
        </div>
    </form>
</div>

<partial name="NovaStavkaTemplate" />

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}



